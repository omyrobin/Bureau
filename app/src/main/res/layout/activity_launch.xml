<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/ic_launch_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/launch_logo_img"
        android:src="@drawable/ic_logo"
        android:layout_marginTop="90dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_marginTop="40dp"
        android:id="@+id/app_chinese_name_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_below="@+id/launch_logo_img"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <View
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:background="@color/colorText"
            android:layout_width="35dp"
            android:layout_height="1dp"/>

        <TextView
            android:id="@+id/app_logo_tv"
            android:text="房山出入境"
            android:layout_below="@id/launch_logo_img"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <View
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:background="@color/colorText"
            android:layout_width="35dp"
            android:layout_height="1dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/app_english_tv"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/app_chinese_name_layout"
        android:text="FangShan Entry-Exit Administration"
        android:gravity="center"
        android:lineSpacingMultiplier="1.5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_marginTop="40dp"
        android:layout_below="@id/app_english_tv"
        android:visibility="visible"
        android:id="@+id/language_select_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/chinese_tv"
            android:layout_marginLeft="80dp"
            android:padding="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:text="中文"
            android:textSize="16sp"
            android:textColor="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/english_tv"
            android:layout_marginRight="80dp"
            android:padding="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:text="English"
            android:textSize="16sp"
            android:textColor="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>



</RelativeLayout>